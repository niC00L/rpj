{block content}
<header>
    <nav class="{$global['main_color']} {$global['secondary_text_color']}top-nav">
        <div class="container">
            <div class="nav-wrapper">
                <a class="brand-logo" href="{plink :Homepage:}">niC00L</a>
                {if $user->loggedIn && $user->getRoles()[0] != 'banned'}
                    <a href="#" data-activates="admin-nav" data-side="right" class="button-collapse toggle-admin right"><i class="mdi-navigation-menu"></i></a>
                    <a href="#" data-toggle="admin-nav" data-side="right" id="admin-toggle" class="right hide-on-med-and-down"><i class="mdi-navigation-menu"></i></a>
                    {/if}
                <ul class="right hide-on-med-and-down">						
                    {foreach $links as $link}
                        {if $link->status == 1}
                            {if $link->type == 'external'}                                
                                <li><a class="{$link->class}" href="{if \Nette\Utils\Strings::startsWith($link->ext_address, 'http://')}{$link->ext_address}{else}http://{$link->ext_address}{/if}" target="blank">{$link->title}</a></li>
                                {elseif $link->type == 'Post'}
                                <li><a  class="{$link->class}"href="{plink ':'.$link->type.':'.$link->action $link->address}">{$link->title}</a></li>					

                            {elseif $link->type == 'Sign'}
                                {if $user->loggedIn}
                                    <li><a class="{$link->class}" href="{plink :Sign:out}">Odhlásit</a></li>
                                    {else}
                                    <li><a class="{$link->class}" href="{plink :Sign:in}">Prihlásit</a></li>
                                    {/if}
                                {else}
                                <li><a class="{$link->class}" href="{plink ':'.$link->type.':'.$link->action }">{$link->title}</a></li>                                
                                {/if}
                            {elseif $link->status == 2}
                                {if $user->loggedIn}
                                    {if $link->type == 'external'}                                
                                    <li><a class="{$link->class}" href="{if \Nette\Utils\Strings::startsWith($link->ext_address, 'http://')}{$link->ext_address}{else}http://{$link->ext_address}{/if}" target="blank">{$link->title}</a></li>
                                    {elseif $link->type == 'Post'}
                                    <li><a  class="{$link->class}"href="{plink ':'.$link->type.':'.$link->action $link->address}">{$link->title}</a></li>					

                                {elseif $link->type == 'Sign'}
                                    {if $user->loggedIn}
                                        <li><a class="{$link->class}" href="{plink :Sign:out}">Odhlásit</a></li>
                                        {else}
                                        <li><a class="{$link->class}" href="{plink :Sign:in}">Prihlásit</a></li>
                                        {/if}
                                    {else}
                                    <li><a class="{$link->class}" href="{plink ':'.$link->type.':'.$link->action }">{$link->title}</a></li>                                
                                    {/if}
                                {/if}
                            {/if}
                        {/foreach}
                </ul>                                
                <ul id="slide-out" class="side-nav {$global['main_color']} {$global['secondary_text_color']}">						
                    {foreach $links as $link}
                        {if $link->status == 1}
                            {if $link->type == 'external'}                                
                                <li><a class="{$link->class}{$global['secondary_text_color']}" href="{if \Nette\Utils\Strings::startsWith($link->ext_address, 'http://')}{$link->ext_address}{else}http://{$link->ext_address}{/if}" target="blank">{$link->title}</a></li>
                                {elseif $link->type == 'Post'}
                                <li><a  class="{$link->class}{$global['secondary_text_color']}"href="{plink ':'.$link->type.':'.$link->action $link->address}">{$link->title}</a></li>					

                            {elseif $link->type == 'Sign'}
                                {if $user->loggedIn}
                                    <li><a class="{$link->class}{$global['secondary_text_color']}" href="{plink :Sign:out}">Odhlásit</a></li>
                                    {else}
                                    <li><a class="{$link->class}{$global['secondary_text_color']}" href="{plink :Sign:in}">Prihlásit</a></li>
                                    {/if}
                                {else}
                                <li><a class="{$link->class}{$global['secondary_text_color']}" href="{plink ':'.$link->type.':'.$link->action }">{$link->title}</a></li>                                
                                {/if}
                            {elseif $link->status == 2}
                                {if $user->loggedIn}
                                    {if $link->type == 'external'}                                
                                    <li><a class="{$link->class}{$global['secondary_text_color']}" href="{if \Nette\Utils\Strings::startsWith($link->ext_address, 'http://')}{$link->ext_address}{else}http://{$link->ext_address}{/if}" target="blank">{$link->title}</a></li>
                                    {elseif $link->type == 'Post'}
                                    <li><a  class="{$link->class}{$global['secondary_text_color']}" href="{plink ':'.$link->type.':'.$link->action $link->address}">{$link->title}</a></li>					

                                {elseif $link->type == 'Sign'}
                                    {if $user->loggedIn}
                                        <li><a class="{$link->class} {$global['secondary_text_color']}" href="{plink :Sign:out}">Odhlásit</a></li>
                                        {else}
                                        <li><a class="{$link->class}{$global['secondary_text_color']}" href="{plink :Sign:in}">Prihlásit</a></li>
                                        {/if}
                                    {else}
                                    <li><a class="{$link->class}{$global['secondary_text_color']}" href="{plink ':'.$link->type.':'.$link->action }">{$link->title}</a></li>                                
                                    {/if}
                                {/if}
                            {/if}
                        {/foreach}
                </ul>   
                <a href="#" data-activates="slide-out" class="button-collapse toggle-menu" data-side="left"><i class="mdi-navigation-menu"></i></a>
                <div class="clearfix"></div>
            </div>
        </div>
    </nav>
    {if $user->loggedIn && $user->getRoles()[0] != 'banned'}
        {var $role = $user->getRoles()[0]}
        {include 'Admin/'.$role.'.latte'}
    {/if}

</header>