{block content}

<main>
    <div class="section {*$global['main_color']*} lighten-4">
        <div class="container">
            <div class="row">
                <div class="col m10 l8 offset-m1 offset-l2">
                    <h1 class="{$global['main_text_color']}">Úprava galérie</h1>
                    <p> 
                        Tu môžte upravovať obsah galérie.
                        {control editForm}
                        {if $gallery->status == 0}
                        <blockquote>
                            Táto galéria je odstránená
                            {control renewForm}
                        </blockquote>
                    {/if}
                {if $gallery->status == 1}{control deleteForm}{/if}
                </p>                   
            </div>
        </div>                
    </div>                
</div>
<div class="{$global['main_color']} lighten-1">&nbsp;</div>

<div class="container padding-vertical-2">
    <div class="row">
        <div class="col m10 l8 offset-m1 offset-l2">
            {control multiplierForm 'editGallery'}
        </div>
    </div>
</div>
</main>