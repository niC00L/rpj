{block content}

<p><a n:href="Homepage:default"> Spat </a></p>

{if $user->loggedIn}
    {control editForm}
    {if $post->status != 0}
        {control deleteForm}
        {if $post->status == 2}
            {control postFormPublish}
        {/if}
    {else}
        {control renewForm}
        {*control postFormDeleteForever*}
    {/if} 
{else}
    <h1> {$post->title} </h1>
    <p> {$post->text} </p>	    
{/if}

{if $images}
    <p>
        {foreach $images as $img}
            <img class="materialboxed" src="{$basePath}/images/post/{$post['id']}/{$img['image_name']}" alt="{$img['alt']}">
        {/foreach}
    </p>
{/if}

<strong> {$post->create_date}</strong>